---
import { Search } from "../components/search";
import { Logo } from "../components/logo";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/newsletter-scraper/favicon.svg"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Newsletter Scraper</title>
  </head>
  <body class="bg-slate-600 min-h-screen flex flex-col">
    <header class="container mx-auto">
      <Logo />
    </header>

    <Search client:only="solid-js" />

    <footer
      class="fixed bottom-0 w-full bg-slate-600/30 backdrop-blur-sm z-10 flex items-center p-3 justify-center text-white"
    >
      Made by <a
        href="https://github.com/carlosqsilva"
        class="mx-1 text-sky-300">Carlos Silva</a
      >
    </footer>
  </body>
</html>
